<div class="flex md:flex-row justify-center align-center p-8 flex-col">
    <div class=" w-3/5 p-4 ">
        <img src="../../<%=receta.imagen%>" class="w-full rounded-xl h-auto md:h-5/6"  alt="<%=receta.nombre%>">
        <!-- <img src="../../../public/images/pizza-hut-cadenas-de-pizza-cdmx.jpg" style="max-width:500px;" alt="imagen de la receta"> -->
        
    </div>
    <div class= w-2/5 p-4">
        <h1 class="md:text-7xl text-3xl my-5"><%=receta.nombre%></h1>
        <p class="md:text-3xl text-xl mt-5 font-bold">Descripción: </p>
        <p class="md:text-xl text-lg mt-5">
            <%=receta.descripcion%>
        </p>
        
    </div>

</div>
<div class="flex md:flex-row justify-center align-center p-8 flex-col">


    <div class="w-1/2 p-8">
        <p class="md:text-3xl text-xl font-bold">Ingredientes:</p>
        <ul class="list-disc mt-5 ml-5">
            <!-- each escape a new li -->
            <% let ingredientes = receta.ingredientes.split('\n')%>
            <%for(var i=0; i < ingredientes.length; i++ ){%>
                <li class="md:text-xl text-lg mt-1"><%=ingredientes[i]%></li>
            <%}%>
        </ul>
            
            <!-- <%=receta.ingredientes%>
        </p> -->
    </div>

    <div class="w-1/2 p-8">
        <p class="md:text-3xl text-xl font-bold">Método de Preparación:</p>
    <p class="md:text-xl text-lg mt-5">
        <%=receta.preparacion%>
    </p>
    </div>
    
    
</div>