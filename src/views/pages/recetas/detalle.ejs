<div class="md:flex justify-center align-center p-8">
    <div class="flex flex-col w-3/5 p-4 md:order-last order-first">
        <img src="../../<%=receta.imagen%>" class="w-full rounded-xl" style="height:600px ;" alt="<%=receta.nombre%>">
        <!-- <img src="../../../public/images/pizza-hut-cadenas-de-pizza-cdmx.jpg" style="max-width:500px;" alt="imagen de la receta"> -->
        
    </div>
    <div class="flex flex-col w-2/5 p-4 order-first md:order-last">
        <h1 class="text-7xl my-5"><%=receta.nombre%></h1>
        <p class="text-3xl mt-5 font-bold">Descripción: </p>
        <p class="text-xl mt-5">
            <%=receta.descripcion%>
        </p>
        
    </div>

</div>
<div class="md:flex justify-center align-center p-8 block">


    <div class="w-1/2 p-8">
        <p class="text-3xl font-bold">Ingredientes:</p>
        <ul class="list-disc mt-5 ml-5">
            <!-- each escape a new li -->
            <% let ingredientes = receta.ingredientes.split('\n')%>
            <%for(var i=0; i < ingredientes.length; i++ ){%>
                <li class="text-xl mt-1"><%=ingredientes[i]%></li>
            <%}%>
        </ul>
            
            <!-- <%=receta.ingredientes%>
        </p> -->
    </div>

    <div class="w-1/2 p-8">
        <p class="text-3xl font-bold">Método de Preparación:</p>
    <p class="text-xl mt-5">
        <%=receta.preparacion%>
    </p>
    </div>
    
    
</div>